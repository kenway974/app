{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Sous_taches</th>
                <td>{{ task.sousTaches }}</td>
            </tr>
            <tr>
                <th>Date_butoir</th>
                <td>{{ task.dateButoir ? task.dateButoir|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Importance</th>
                <td>{{ task.importance }}</td>
            </tr>
            <tr>
                <th>Statistiques liées</th>
                <td colspan="2">
                    {% if task.stats is not empty %}
                        <ul>
                            {% for stat in task.stats %}
                                <li>
                                    <a href="{{ path('app_stat_show', {'id': stat.id}) }}">
                                        {{ stat.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        Aucune statistique liée.
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Checked</th>
                <td>{{ task.checked ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">back to list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
