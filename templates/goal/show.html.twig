{% extends 'base.html.twig' %}

{% block title %}Goal{% endblock %}

{% block body %}
    <h1>Goal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ goal.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ goal.category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ goal.description }}</td>
            </tr>
            <tr>
                <th>DateButoir</th>
                <td>{{ goal.dateButoir ? goal.dateButoir|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Pourquoi</th>
                <td>{{ goal.pourquoi }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_goal_task_new', { 'id': goal.id }) }}">créer une tâche</a>

    <a href="{{ path('app_goal_index') }}">back to list</a>

    <a href="{{ path('app_goal_edit', {'id': goal.id}) }}">edit</a>

