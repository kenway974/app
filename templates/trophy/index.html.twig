{% extends 'base.html.twig' %}

{% block title %}Trophy index{% endblock %}

{% block body %}
    <h1>Trophy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Rarity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trophy in trophies %}
            <tr>
                <td>{{ trophy.id }}</td>
                <td>{{ trophy.title }}</td>
                <td>{{ trophy.description }}</td>
                <td>{{ trophy.rarity }}</td>
                <td>
                    <a href="{{ path('app_trophy_show', {'id': trophy.id}) }}">show</a>
                    <a href="{{ path('app_trophy_edit', {'id': trophy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trophy_new') }}">Create new</a>
{% endblock %}
